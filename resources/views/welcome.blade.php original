<script>
  window.addEventListener('scroll', function() {
    var header = document.querySelector('#head');
    var menu = document.querySelector('#menu');
    var scrollPosition = window.scrollY;

    // Calculate the position of the menu div relative to the viewport
    var menuPosition = menu.getBoundingClientRect().top;

    // Adjust the offset if needed, for example, to trigger the change earlier or later
    var offset = 0; // Adjust this value as needed

    if (scrollPosition > menuPosition - offset) {
      header.classList.add('bg-emerald-900'); // Change to your desired color class
    } else {
      header.classList.remove('bg-emerald-900');
    }
  });

  document.getElementById('scroll').addEventListener('click', function() {
    // Scroll to the target element (menu) smoothly
    document.getElementById('menu').scrollIntoView({ behavior: 'smooth' });
  });
</script>
